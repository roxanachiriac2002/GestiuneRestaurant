@page
@model GestiuneRestaurant.Pages.Comenzi.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Comanda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Selectarea Mesei -->
            <div class="form-group">
                <label asp-for="Comanda.MasaId" class="control-label"></label>
                <select asp-for="Comanda.MasaId" class="form-control" asp-items="ViewBag.MasaId"></select>
            </div>

            <!-- Selectarea Produselor si Introducerea Cantitatilor -->
            <div class="form-group">
                <label class="control-label">Selectați Produsele și Cantitățile</label>
                @foreach (var produs in ViewBag.ProduseMeniu)
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input"
                               name="SelectedProduse[@produs.Value]" />
                        <label class="form-check-label">@produs.Text</label>
                    </div>
                    <div class="form-group">
                        <label>Cantitate:</label>
                        <input type="number" class="form-control"
                               name="ProdusCantitati[@produs.Value]" min="1" max="99" />
                    </div>
                }
            </div>

            <!-- Butonul de Submit -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
